page{
  padding: 0;
  margin: 0;
  background-color: #F1F1F1;
}
scroll-view{
  height: 92vh;
}
/*商品*/
.shangp{
  width:702rpx;
  height:200rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-left: 24rpx;
  margin-top: 12rpx;
}
.shangp>image{
  width: 200rpx;
  height: 200rpx;
  float: left;
}
.shangp-right{
  float: left;
  margin-left: 30rpx;
}
.shangp-right-yi{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 6rpx;
}
.shangp-right-san{
  margin-top: 8rpx;
}
.shangp-right-san>text{
  height:36rpx;
  background:rgba(225,225,225,1);
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
  border-radius: 18rpx;
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.right-si{
  width: 448rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(102,102,102,1);
  text-align: right;
}

/*底部按钮*/
.anniu{
  width:750rpx;
  height:96rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(241,241,241,1);
  position: fixed;
  bottom: 0;
}
.anniu-left{
  height:40rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
  margin-top: 28rpx;
  margin-left: 16rpx;
  float: left;
}
.anniu-right{
  width:220rpx;
  height:100rpx;
  background:rgba(255,48,0,1);
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:100rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  float: right;
}
.anniu-right1{
  width:220rpx;
  height:100rpx;
  background:rgba(255,125,38,1);
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
  float: right;
  line-height:100rpx;
}
.anniu-right1>text{
  display: block;
  text-align: center;
}