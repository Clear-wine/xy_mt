page{
  padding: 0;
  margin: 0;
  background-color: #F1F1F1;
}
scroll-view{
  height: 92vh;
}
/*商品*/
.shangp{
  width:702rpx;
  height:200rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-left: 24rpx;
  margin-top: 12rpx;
}
.shangp>image{
  width: 200rpx;
  height: 200rpx;
  float: left;
}
.shangp-right{
  float: left;
  margin-left: 30rpx;
}
.shangp-right-yi{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 6rpx;
}
.shangp-right-san{
  margin-top: 8rpx;
}
.shangp-right-san>text{
  height:36rpx;
  background:rgba(225,225,225,1);
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
  border-radius: 18rpx;
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.right-si{
  width: 448rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(102,102,102,1);
  text-align: right;
}
.shangp-bottom{
  width:702rpx;
  text-align: center;
  margin-left: 24rpx;
  background:rgba(255,255,255,1);
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-bottom: 20rpx;
}
/*物流信息*/
.wuliu{
  width:702rpx;
  height:204rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-top: 24rpx;
  margin-left: 24rpx;
}
.wuliu-yi{
  width: 654rpx;
  height: 50rpx;
  margin-left: 24rpx;
  padding-top: 15rpx;
}
.wuliu-yi>view{
  min-width:144rpx;
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
  float: left;
  margin-top: 8rpx;
}
.wuliu-cx{
  float: right;
  width:148rpx;
  height:50rpx;
  background:rgba(255,125,38,1);
  border-radius:8rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:50rpx;
  color:rgba(255,255,255,1);  
}
.wuliu-yi>input{
  width:502rpx;
  height:50rpx;
  background:rgba(241,241,241,1);
  border-radius:4rpx;
  float: left;
  margin-left: 8rpx;
  font-size: 24rpx;
}
/*退款说明*/
.shuom{
  width:702rpx;
  min-height: 400rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-left: 24rpx;
  margin-top: 16rpx;
}
.shuom-yi{
  width:112rpx;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 14rpx;
  margin-left: 24rpx;
}
.shuom-er{
  width:654rpx;
  height:184rpx;
  background:rgba(248,248,248,1);
  border-radius:10rpx;
  margin-top: 14rpx;
  margin-left: 24rpx;
}
.shuom-san{
  margin-top: 14rpx;
  margin-left: 24rpx;
}
.shuom-san-yi{
  width:112rpx;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-top: 14rpx;
}
.shuom-san-er{
  width: 200rpx;
  height: 200rpx;
  border-radius:10rpx;
  margin-top: 12rpx;
  margin-left: 10rpx;
}
.shoum-si{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-left: 24rpx;
  margin-top: 16rpx;
}
/*底部按钮*/
.anniu{
  width:750rpx;
  height:96rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(241,241,241,1);
  position: fixed;
  bottom: 0;
}
.anniu-left{
  height:40rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:34rpx;
  color:#FF3000;
  margin-top: 28rpx;
  margin-left: 16rpx;
  float: left;
}
.anniu-right{
  width:220rpx;
  height:100rpx;
  background:rgba(255,125,38,1);
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:100rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  float: right;
}