}
scroll-view{
  height: 92vh;
}
/*商品*/
.shangp{
  width:702rpx;
  height:200rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-left: 24rpx;
  margin-top: 16rpx;
}
.shangp>image{
  width: 200rpx;
  height: 200rpx;
  float: left;
}
