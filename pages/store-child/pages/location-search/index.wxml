<view class="container">
  <!-- 城市定位 搜索 -->
  <view class="search-bar">
    <view class="location_city" bindtap='selectCity'>
      <image class="location-img" src="../images/search_bar_location.png" mode=""></image>
      {{city}}
      <image class="location-more" src="../images/city_location_select.png"></image>
    </view>
    <!-- 关键字搜索 -->
    <view class="location_input">
      <image src="../images/index_search.png"></image>
      <input placeholder-class="phcolor" placeholder='小区/写字楼/学校等' focus='true' bindinput="handleInput" bindtap="handleConfirm"></input>
    </view>
    <!-- <view class="search-btn" bindtap="handleConfirm">搜索</view> -->
  </view>

  <!-- 搜索记录 -->
  <!-- <view class="list-history">
    <view class="search-history">历史搜索
      <image src="../images/delete_all.png"></image>
      <scroll-view scrolly-y="true" class="history">
        <view hidden="{{historyList.length !=0}}" class="no-data">
