page {
  background-color: #fff;
  padding: 0;
  margin: 0;
  height: 100%;
}

.container {
  padding-top: 100rpx;
  box-sizing: border-box;
  height: 100%;
}

.search-bar {
  width: 100%;
  height: 100rpx;
  /* line-height: 100rpx; */
  margin-top: -100rpx;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0 20rpx;
  background-color: #fff;
  position: relative;
}

.location_city {
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #353b56;
  float: left;
  width: 25%;
  /* text-align: center; */
}

.location_city .location-img {
  width: 32rpx;
  height: 36rpx;
  position: relative;
  top: 10rpx;
}

.location_city .location-more {
  width: 16rpx;
  height: 10rpx;
  position: relative;
  top: -6rpx;
}

.location_input {
  width: 55%;
  background-color: #e5e5e5;
  border-radius: 20px;
  font-size: 24rpx;
  position: relative;
  top: 0;
  padding-left: 10%;
  padding-right: 5%;
  float: left;
  height: 58rpx;
  line-height: 58rpx;
}

.location_input input {
  height: 58rpx;
}

.location_input .phcolor {
  color: #fff;
}

.location_input image {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  left: 5%;
  top: 22%;
  margin: 0;
}

.location-bar {
  overflow: hidden;
  width: 90%;
  margin: auto;
  border-bottom: 1rpx solid #f4f4f4;
  padding: 2% 0;
}

.location-bar .left {
  width: 50%;
  float: left;
}

.location-bar .right {
  width: 40%;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #ff9736;
  float: right;
  text-align: right;
}

.location-bar .right image {
  width: 39rpx;
  height: 39rpx;
  position: relative;
  top: 6rpx;
  margin-right: 2%;
}

.search-warp, .address-wrap {
  margin-top: 2%;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  background: #fff;
}

.address-top {
  width: 90%;
  overflow: hidden;
  padding: 5% 0;
  margin: auto;
}

.address-img {
  width: 45%;
  float: left;
  font-size: 26rpx;
  color: #999;
}

.address-img image {
  width: 28rpx;
  height: 26rpx;
  position: relative;
  padding-right: 2%;
}

.add-address {
  width: 45%;
  float: right;
  text-align: right;
  color: #ff9736;
  font-size: 26rpx;
}

.add-address image {
  width: 12rpx;
  height: 22rpx;
}

.address-list {
  width: 90%;
  margin: auto;
}

.address-item {
  border-bottom: 1rpx solid #f4f4f4;
  padding: 2% 0;
}

.address-item .item>text:first-child {
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #353b56;
  margin-bottom: 2%;
  margin-right: 3%;
  display: inline-block;
  text-align: center;
}
.label {
  margin-right: 0;
  background-color: #ff9736;
  border-radius: 15px;
  width: 80rpx;
  height: 30prx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #fff;
  display: inline-block;
  text-align: center;
}

.address-item  .item-user>text {
  font-family: PingFang-SC-Medium;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #999;
  margin-right: 3%;
  display: inline-block;
}

.address-item  .item-user>text:last-child {
  margin-right: 0;
}

.isDefault {
  border: 1px solid #999;
  color: #fff;
  font-size: 22rpx;
  background-color: #999;
  border-radius: 20rpx;
  width: 76rpx;
  display: inline-block;
  text-align: center;
  font-weight: 300;
  margin-left: 2%;
}

.noneDefault {
  border: none;
  background: #fff;
  width: 0;
}
 .none{
 border: none;
 background: #fff;
 width: 0
}

/***************搜索结果列表***********************/

.search-warp {
  padding-left: 2%;
  padding-right: 2%;
}

.item-nav {
  padding: 2% 0;
}

.item-nav .title {
  font-size: 29rpx;
  color: #353b56;
}

.item-nav .address {
  font-size: 23rpx;
  color: #999;
}
