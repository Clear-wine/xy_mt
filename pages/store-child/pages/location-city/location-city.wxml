<!-- 全国城市选择 -->
<view class='container'>
  <!-- 搜索栏 -->
  <view class='search-bar'>
    <!-- 搜索框 -->
    <view class='search-input'>
      <image src='../images/index_search.png'></image>
      <input type='text'  value="{{inputVal}}" placeholder-class="phcolor" placeholder='输入城市名' focus="true" bindconfirm="handleConfirm" confirm-type="search" bindinput="handleInput"></input>
    </view>
    <!-- 取消搜索 -->
    <view class='cancel' bindtap='handleBack'>取消</view>
    <!-- <view class='cancel' bindtap='handleBack2'>点击</view> -->

  </view>
  <!-- 搜索结果列表 -->
  <view class='list-detail' hidden="{{!inputListShow}}">
    <scroll-view scroll-y="true" style='height:100%'>
      <view class='item-nav' wx:for="{{searchList}}" catchtap='searchSelectCity' data-poilocation="{{item.location}}" data-name="{{item.name}}" data-address="{{item.district}}{{item.address}}" data-longitude="{{longitude}}" data-latitude="{{latitude}}" data-sname="{{sname}}"
        data-saddress="{{saddress}}" data-idx="0" data-city="{{city}}" data-cityd="{{citySelected}}" wx:key>
        <view class='title'>{{item.name}}</view>
        <view class='address'>{{item.district}}{{item.address}}</view>
      </view>
    </scroll-view>
  </view>
  <!-- 城市列表 -->
  <view class='list-city' hidden="{{!cityListShow}}">
    <scroll-view scroll-y="true" style="height:100%;" scroll-into-view="{{scrollTopId}}" scroll-with-animation="true" enable-back-to-top="true">
      <!-- 当前定位城市 -->
      <view class='location-bar'>
        <view class='location-city'>
          当前城市:{{city}}
        </view>
        <view class='location-btn' bindtap='updateAddress'>
          <image src="../images/anew_location.png"></image>
          重新定位
        </view>
      </view>
      <!-- 历史城市 -->
      <view class='item' style='padding-bottom:25rpx;'>
        <view class='py-city' id='historic'>历史城市</view>
        <view hidden='{{historicCityData.length !=0}}' class='no-data'>
          <view>无搜索记录</view>
        </view>
        <view class='fullname h-city' wx:for="{{historicCityData}}" wx:key="key" data-fullname="{{item.fullname}}" data-lat="{{item.location.lat}}" data-lng="{{item.location.lng}}" bindtap='selectCity'>{{item.fullname}}</view>
      </view>
      <!-- 热门城市 -->
      <view class='item' style='padding-bottom:25rpx;'>
        <view class='py-city' id='hot'>热门城市</view>
        <view class='fullname h-city' wx:for="{{hotCityData}}" wx:key="key" data-fullname="{{item.fullname}}" data-lat="{{item.location.lat}}" data-lng="{{item.location.lng}}" catchtap='selectCity'>{{item.fullname}}</view>
      </view>
      <!-- 城市列表 -->
      <view class='item' wx:for="{{cityData}}" wx:for-index="idx" wx:for-item="group" wx:key="key">
        <view class='py' id="{{idx}}">{{idx}}</view>
        <view class='fullname' wx:for="{{group}}" wx:key="key" data-fullname="{{item.fullname}}" data-lat="{{item.location.lat}}" data-lng="{{item.location.lng}}" catchtap='selectCity'>{{item.fullname}}</view>
      </view>
    </scroll-view>
    <!-- 首字母 -->
    <view class='city-py' bindtouchstart='tStart' bindtouchend='tEnd' catchtouchmove='tMove'>
      <view wx:for="{{_py}}" wx:key="key" bindtouchstart="getPy" bindtouchend="setPy" id="{{item}}">{{item == 'hot' ? "★" : item}}
      </view>
    </view>
  </view>
</view>
<!--选择显示-->
<view hidden="{{hidden}}" class="showPy">{{showPy == 'hot' ? "★" : showPy}}</view>