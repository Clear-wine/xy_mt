.container {
  padding: 0;
  margin: 0;
  height: 100%;
  background-color: #fff;
  min-height: 100vh;
}

.search-wrap {
  background-color: #ffba3a !important;
  box-sizing: border-box;
  overflow: hidden;
  /* position: fixed; */
  top: 0;
  width: 100%;
}

.search {
  width: 82%;
  background-color: #fff;
  position: relative;
  border-radius: 30rpx;
  font-size: 28rpx;
  float: left;
  margin: 1% 3%;
}

.search-input {
  margin: 0 2%;
}

.search-dw {
  float: left;
  color: #38adff;
  position: relative;
  top: 9rpx;
  margin: 0 4%;
}

.search-input image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  position: relative;
  top: 13rpx;
  margin: 0 2%;
}

.search-input input {
  height: 58rpx;
}

.search-btn {
  float: left;
  font-size: 30rpx;
  position: relative;
  top: 10rpx;
}

/* 搜索记录 */

.Search_xian {
  width: 100%;
  height: 1rpx;
  background: #dcdcdc;
  margin-bottom: 32rpx;
}

.Search_record_text>text {
  font-size: 28rpx;
  color: #898989;
  margin-left: 20rpx;
}

.hot_box_text>text {
  font-size: 28rpx;
  color: #898989;
  margin-left: 20rpx;
}

.hot_box_text {
  margin-top: 40rpx;
}

.Search_record_text>image {
  width: 23rpx;
  height: 28rpx;
  vertical-align: middle;
  float: right;
  margin-right: 20rpx;
}

.History-list {
  margin-left: 20rpx;
  margin-top: 28rpx;
  margin-right: 20rpx;
}

.History-list>text {
  display: inline-block;
  height: 56rpx;
  border-radius: 5px;
  background: #f5f5f5;
  max-width: 100%;
  padding-left: 24rpx;
  padding-right: 24rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: #393939;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  margin-right: 20rpx;
}

.list {
  width: 95%;
  margin: auto;
}

.li-goods {
  border-bottom: 1rpx solid #f4f4f4;
  padding: 3% 0;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
