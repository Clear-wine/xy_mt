/* pages/custom_navbar/index/index.wxss */
page{
  height: 100%;
}
view{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.container{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}

.head{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: auto;
  background-color: #333;
  color: #fff;
  font-size: 24rpx;
  letter-spacing: 1rpx;
}
.head .head_nav{
  padding-left: 10rpx;
}

.head_nav .img_saoyisao, .head_nav .img_back{
  width: 26px;
  height: 26px;
}

.store_info{
  padding: 20rpx 0 20rpx 30px;
}
.store_info .img_store_logo{
  width: 140rpx;
  height: 84rpx;
  margin-right: 10rpx;
}
.store_info .img_arrow_right{
  width: 12rpx;
  height: 18rpx;
  margin-left: 10rpx;
}

.store_info .store-star{
  margin-left: 10rpx;
}
.store_info .store-star image{
  width: 12rpx;
  height: 12rpx;
  margin-right: 4rpx;
}
.store_info .store_xj{
  margin-top: 10rpx;
  font-size: 20rpx;
  letter-spacing: 2rpx;
}

.nav_4{
  padding: 0 50rpx 10rpx 50rpx;
  font-size: 28rpx;
}
.nav_li{
  height: 50rpx;
}
.nav_4_act{
  border-bottom: 4rpx solid #fff;
  font-size: 32rpx;
}

.content{
  padding-top: 304rpx;
  padding-bottom: 120rpx;
  height: 100%;
}