.container {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background: #fff;
  min-height: 100vh;
}

.center-view {
  text-align: center;
  padding: 4% 0;
}
.center-title{
	font-family: PingFang-SC-Bold;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #353b56;
  padding-top: 3%;
  padding-bottom: 2%
}
.center-time{

	font-family: PingFang-SC-Bold;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #353b56;
}
.center-view image {
  width: 202rpx;
  height: 202rpx;
  /* background-image: linear-gradient(0deg, #fbb34b 0%, #fcbe63 50%, #fcc678 100%); */
}

.bank-view {
  padding: 2% 0;
  width: 95%;
  margin: 4% auto;
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}

.row-view {
  display: flex;
  justify-content: space-between;
  padding: 1.5% 0;
}

.row-view .col-title {
  font-family: PingFang-SC-Medium;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #999;
}

.row-view .col-val {
  font-family: PingFang-SC-Medium;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #353b56;
}
.up-btn{
  	width: 95%;
	height: 80rpx;
  margin: auto;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
	background-color: #ff9736;
	border-radius: 40px;
  text-align: center;
}