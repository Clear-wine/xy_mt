.container {
  padding: 0;
  margin: 0;
  overflow: hidden;
}

.top-view {
  background-color: #fff;
  padding: 2% 0 2% 2%;
}

.li-view {
  padding-bottom: 2%;
  display: flex;
}

.li-view .circle {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #ff9736;
  display: inline-block;
  position: relative;
  top: 10rpx;
  margin-right: 2%;
}

.li-view .title {
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: normal;
  letter-spacing: 0px;
  color: #353b56;
}

.li-view-mod {
  display: flex;
  background-color: #fff;
  width: 90%;
  margin: auto;
  margin-top: 3%;
  padding: 2% 3%;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
}

.li-view-mod .li-img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 4%;
}

.li-img image {
  width: 100%;
  height: 100%;
}

.list-view {
  width: 40%;
  font-size: 30rpx;
  padding-left: 2%;
}

.org {
  color: #ff9736;
}

.list-view .list-title {
  padding-bottom: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-view .list-title:last-child {
  padding-bottom: 0;
}

.list-view .day-title {
  font-size: 22rpx;
}
