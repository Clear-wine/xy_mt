/***********推荐*****************/

.recommend {
width: 100%;
}

.recommend-title {
  text-align: center;
  font-size: 30rpx;
  position: relative;
}

.recommend-title::before {
  content: "";
  position: absolute;
  width: 120rpx;
  height: 2rpx;
  top: 50%;
  background-color: #999;
  left: 20%;
}

.recommend-title::after {
  content: "";
  position: absolute;
  width: 120rpx;
  height: 2rpx;
  top: 50%;
  background-color: #999;
  right: 20%;
}

.recommend-title view {
  display: inline-block;
}

.rec-ul {
  overflow: hidden;
}

.rec-li {
  width: 44%;
  background: #fff;
  padding: 2%;
  border-radius: 20rpx;
  margin: 1%;
  float: left;
}
.help-li-img {
  width: 250rpx;
  height: 300rpx;
  margin: auto;
}

.help-li-img image {
  width: 100%;
  height: 100%;
}


.rec-li-tit {
  font-size: 28rpx;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.ticket-img {
  position: relative;
}

.ticket-img image {
  width: 82rpx;
  height: 27rpx;
}

.ticket-money {
  font-size: 22rpx;
  color: #fff;
  top: 8rpx;
  left: 29rpx;
  position: absolute;
}

.rec-money {
  font-size: 28rpx;
  color: #ff5543;
  display: inline-block;
}

.rec-nomoney {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  display: inline-block;
  margin-left: 4%;
}
