page{
  margin: 0;
  padding: 0;
  background:#F1F1F1;
}
.body{
  height: 93vh;
}
/*轮播图*/
.lunbo{
  width: 100%;
  height: 560rpx;
}

.lunbo-img{
  width: 100%;
  height: 100%;
}
/*活动标题*/
.biaoti{
  width: 100%;
  height:130rpx;
  background:linear-gradient(90deg,rgba(255,157,27,1),rgba(255,62,17,1));
}
.biaoti-top{
  width: 680rpx;
  height: 50rpx;
  margin-left: 30rpx;
  padding-top: 20rpx;
}
.biaoti-top-yi{
  font-size:38rpx;
  font-family:Reeji-CloudZongYi- GBK;
  font-weight:bold;
  color:rgba(255,255,255,1);
  text-shadow:1px 2px 8px rgba(203,65,0,0.4);
  float: left;
}
.biaoti-top-er{
  width:160rpx;
  height:40rpx;
  background:rgba(255,255,255,1);
  border-radius:19rpx;
  float: right;
  font-size:22rpx;
  color:rgba(255,48,0,1);
  line-height:40rpx;
}
.biaoti-top-er>image{
  width:20rpx;
  height:24rpx;
  margin-left: 11rpx;
  margin-top: 7rpx;
  float: left;
  margin-right: 7rpx;
}
.biaoti-bottom{
  width: 680rpx;
  height: 50rpx;
  margin-left: 30rpx;
  padding-top: 7rpx;
}
.biaoti-bottom-yi{
  font-size:24rpx;
  color:rgba(255,255,255,1);
  float: left;
}
.biaoti-bottom-er{
  font-size:22rpx;
  color:rgba(255,189,165,1);
  float: right;
}
/* 商品信息 */
.xinxi{
  width: 100%;
  background:rgba(255,255,255,1);
}
.xinxi-yi{
  font-size:36rpx;
  font-weight:bold;
  color:rgba(53,59,86,1);
  padding-top: 29rpx;
  margin-left: 28rpx;
}
.xinxi-er{
  margin-top: 15rpx;
  margin-left: 27rpx;
  font-size:22rpx;
  color:rgba(153,153,153,1);
}
.xinxi-er>text{
  display: inline-block;
  margin-right: 29rpx;
}
.xinxi-san{
  width: 100%;
  height: 50rpx;
  margin-left: 29rpx;
  margin-top: 15rpx;
}
.xinxi-san>view{
  float: left;
}
.xinxi-san-yi{
  width:94rpx;
  height:30rpx;
  background:rgba(255,157,27,1);
  border-radius:6rpx;
  font-size:20rpx;
  color:rgba(255,255,255,1);
  line-height:30rpx;
  text-align: center;
  margin-top: 10rpx;
}
.xinxi-san-er{
  font-size:36rpx;
  color:rgba(255,48,0,1);
  margin-left: 20rpx;
}
.xinxi-san-san{
  font-size:22rpx;
  text-decoration:line-through;
  color:rgba(153,153,153,1);
  margin-left: 15rpx;
  margin-top: 15rpx;
}
.xinxi-si{
  width: 90%;
  height: 50rpx;
  color: #999;
  font-size: 28rpx;
  margin-top: 13rpx;
  margin-left: 29rpx;
}
.xinxi-si-left{
  float: left;
}
.xinxi-si-right{
  float: right;
  width: 20rpx;
  height: 30rpx;
  margin-top: 8rpx;
}
/* 猜你喜欢 */
.xihuan{
  width: 100%;
  height:440rpx;
  background:rgba(255,255,255,1);
  margin-top: 20rpx;
}
.xihuan-top{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(53,59,86,1);
  padding-top: 30rpx;
  margin-left: 29rpx;
}
.xihuan-bottom{
  width: 93%;
  height: 306rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  white-space: nowrap;
}
.xh{
  width: 260rpx;
  height: 100%;
  background:rgba(255,255,255,1);
  box-shadow:0px 8px 8px 0px rgba(233,225,212,0.5);
  border-radius:12rpx;
  display:inline-block;
  margin-right: 10rpx;
}
.xh>image{
  width: 100%;
  height:170rpx;
  border-radius:12rpx 12rpx 0rpx 0rpx;
}
.xh-name{
  width: 94%;
  font-size:28rpx;
  font-weight:500;
  color:rgba(53,59,86,1);
  margin-top: 22rpx;
  margin-left: 19rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.xh-jiage{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(255,48,0,1);
  margin-top: 25rpx;
  margin-left: 20rpx;
}
/* 评价 */
.shops-head {
  width: 100%;
  background: #fff;
  margin-bottom: 2%;
  margin-top: 20rpx;
}
.head-box {
  overflow: hidden;
  font-size: 28rpx;
  padding: 4% 0;
  margin: auto;
  width: 90%;
  position: relative;
}
.eva-head {
  width: 100%;
  overflow: hidden;
  margin-bottom: 2%;
}

.evaluate {
  font-size: 28rpx;
  float: left;
  width: 50%;
}

.eva-all {
  font-size: 26rpx;
  color: #999;
  float: right;
  width: 50%;
  text-align: right;
}

.eva-all image {
  width: 18rpx;
  height: 18rpx;
}

.eva-pro {
  font-weight: 600;
}

.eva-num {
  font-size: 26rpx;
  color: #999;
  margin-left: 4%;
}

.use-list {
  width: 100%;
  padding: 4% 0;
  position: relative;
}

.user-img {
  width: 55rpx;
  height: 55rpx;
}

.user-img image {
  width: 100%;
  height: 100%;
}

.user-box {
  position: absolute;
  top: 22%;
  left: 10%;
  font-size: 26rpx;
}

.user-time {
  position: absolute;
  top: 22%;
  right: 0;
  color: #999;
  font-size: 24rpx;
}

.user-title {
  font-size: 24rpx;
  color: #999;
}

.noeva {
  color: #999;
}
/* 店铺 */

.shop-img {
  width: 127rpx;
  height: 127rpx;
  float: left;
}

.shop-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.shop-content {
  width: 70%;
  float: right;
  position: relative;
}

.shop-content-star {
  font-size: 20rpx;
  margin: 2% 0;
}

.shop-content-star image {
  width: 18rpx;
  height: 17rpx;
  margin-right: 2%;
}

.shop-content-intro {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  padding-right: 20rpx;

}

.shop-content-img {
  width: 11px;
  height: 20px;
  position: absolute;
  right: 0;
  top: 50%;
}

.shop-content-img image {
  width: 100%;
  height: 100%;
}
/* 按钮 */
.pay {
  position: fixed;
  bottom: 0;
  background: #fff;
  overflow: hidden;
  width: 100%;
  justify-content: space-between;
  height: 88rpx;
}

.pay-left {
  width: 32%;
  float: left;
  text-align: center;
}

.pay-left navigator {
  margin: 5% 8%;
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
}

.pay-left navigator image {
  width: 40rpx;
  height: 37rpx;
  display: block;
  margin: auto;
}

.pay-right {
  width: 60%;
  font-size: 28rpx;
  color: #fff;
  float: right;
  text-align: right;
}

.pay-right .pay-add {
  display: inline-block;
  line-height: 88rpx;
  background: #f80;
  width: 50%;
  text-align: center;
}

.pay-right .pay-share {
  display: inline-block;
  line-height: 88rpx;
  background: #ff5543;
  width: 50%;
  text-align: center;
}
.activity-pay .recommend {
  width: 20%;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 12rpx 0 0;
}

.recommend image {
  width: 100%;
  height: 45rpx;
}

.activity-title {
  width:440rpx;
  font-size: 30rpx;
  color: #fff;
  float: right;
  height: 88rpx;
  background-color: #FF9736;
  line-height: 88rpx;
  text-align: center;
}

.activity-title .jielong {
  line-height: 88rpx;
}
.pay-left {
  width: 37%;
  float: left;
  margin-left: 19rpx;
}

.pay-left .navto {
  margin: 4% 5%;
  float: left;
  font-size: 25rpx;
}
.navto>button{
  width: 54rpx;
  height: 67rpx;
  padding: 0;
  font-size: 24rpx;
  line-height: 37rpx;
  background-color: #fff;
}
.navto>button::after{
  border: none;
}
.pay-left .navto image {
  width: 40rpx;
  height: 37rpx;
  display: block;
  margin: auto;
}
.cartNum {
  position: absolute;
  top: 1rpx;
  left: 234rpx;
  width: 30rpx;
  background: red;
  height: 30rpx;
  border-radius: 50%;
  font-size: 21rpx;
  color: #fff;
}
/*规格选择弹出框*/
.mask-layer {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
}
.guige{
  width:750rpx;
  min-height:600rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx 12rpx 0px 0px;
  position: fixed;
  bottom: 0;
}
.guige-yi{
  width: 94%;
  height: 230rpx;
  margin-left: 3%;
}
.guige-yi-left{
  width: 200rpx;
  height: 200rpx;
  border-radius:12rpx;
  float: left;
  margin-top: 30rpx;
}
.guige-yi-center{
  width: 470rpx;
  height: 200rpx;
  margin-top: 30rpx;
  float: left;
  margin-left: 30rpx;
}
.guige-yi-center>image{
  width: 30rpx;
  height: 30rpx;
  padding-left: 90%;
}
.guige-yi-jiage{
  font-size:36rpx;
  font-weight:bold;
  color:rgba(255,48,0,1);
}
.guige-yi-xuanz{
  font-size:26rpx;
  color:rgba(53,59,86,1);
  margin-top: 20rpx;
}
.guige-yi-kucun{
  font-size:22rpx;
  color:rgba(153,153,153,1);
  margin-top: 20rpx;
}
.guige-er{
  width: 94%;
  margin-left: 3%;
  margin-top: 60rpx;
}
.guige-er-yi{
  font-size:24rpx;
  color:rgba(51,51,51,1);
}
.guige-xuanze>text{
  display: inline-block;
  margin-right: 20rpx;
  margin-top: 30rpx;
}
.xuanze1{
  height:50rpx;
  background:rgba(255,231,225,1);
  border:1rpx solid rgba(255,48,0,1);
  border-radius:25rpx;
  font-size:26rpx;
  color:rgba(255,48,0,1);
  line-height:50rpx;
  padding: 0 20rpx;
}
.xuanze2{
  height:50rpx;
  background:rgba(240,240,240,1);
  border-radius:25rpx;
  font-size:26rpx;
  color:rgba(53,59,86,1);
  line-height:50rpx;
  padding: 0 20rpx;
}
.guige-san{
  width:690rpx;
  height:80rpx;
  background:linear-gradient(90deg,rgba(255,157,27,1),rgba(255,182,42,1));
  border-radius:40rpx;
  font-size:30rpx;
  color:rgba(255,255,255,1);
  line-height:80rpx;
  text-align: center;
  margin-left: 3%;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}


.shopDetails {
  margin-top: 4%;
}

.shopDetails-title {
  font-size: 26rpx;
  color: #999;
  position: relative;
  text-align: center;
}

.shopDetails-title::after, .shopDetails-title::before {
  content: '';
  position: absolute;
  top: 50%;
  background: #999;
  width: 28%;
  height: 1px;
}

.shopDetails-title::after {
  right: 10%;
}

.shopDetails-title::before {
  left: 10%;
}
.imglist-h5 {
  width: 100%;
}

.imglist-h5 image {
  width: 100%;
  height: 100%;
  display: block;
}

.imglist-h5:last-child {
  padding-bottom: 90rpx;
}

/* 到底提醒 */

.bottom-title {
  margin-top: 20rpx;
  position: absolute;
  text-align: center;
  width: 100%;
}

.bottom-title view {
  line-height: 20px;
  color: #999;
  font-size: 24rpx;
}