page{
  margin:0;
  padding:0;
  background-color:#F1F1F1;
}
scroll-view{
  height: 92vh;
}
.shop{
  width: 780rpx;
  height: 240rpx;
  background-color: #fff;
  border: 2rpx solid #eee;
}
#shop-img{
  width: 30rpx;
  height: 30rpx;
  float: left;
  padding: 100rpx 15rpx 60rpx;
}
.shop-left{
  width:200rpx;
  height:200rpx;
  border-radius:12rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  float: left;
}
.shop-left>image{
  width: 100%;
  height: 100%;
  border-radius:12rpx;
}
.shixiao{
  width:120rpx;
  height:120rpx;
  background:rgba(0,0,0,1);
  opacity:0.4;
  border-radius:50%;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 120rpx;
  position: relative;
  top: -163rpx;
  left: 32rpx;
}
.shop-right{
  width: 446rpx;
  height: 200rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.shixiao2{
  color:rgba(204,204,204,1) !important;
}
.shop-name{
  width:446rpx;
  height:75rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(53,59,86,1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop-tn{
  margin-top: 78rpx;
}
.jiage{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,48,0,1);
  float: left;
}
.sctn{
  float: right;
  font-size:24rpx;
  width: 110rpx;
  height: 50rpx;
  background-color: #eee;
  text-align: center;
  line-height: 50rpx;
  border-radius:25rpx;
  color: #999;
  margin-right: 30rpx;
}
.bt{
  width: 100%;
  height: 98rpx;
  background:rgba(255,255,255,1);
  position: fixed;
  bottom: 0;
}
.bt-yi{
  width: 100rpx;
  height: 30rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.bt-yi>image{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 7rpx;
}
.bt-yi>view{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  margin-left: 8rpx;
  float: left;
}
.bt-er{
  width: 260rpx;
  height: 100%;
  float: right;
  background:rgba(255,48,0,1);
  text-align: center;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:92rpx;
}
.bt-san{
  width: 260rpx;
  height: 100%;
  float: right;
  background:rgba(255,151,54,1);
  text-align: center;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:92rpx;
}