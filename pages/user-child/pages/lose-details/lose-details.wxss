  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
}

.bag-view {
  background-color: #fff;
  height: 480rpx;
}

.lose-view-img {
  position: absolute;
  text-align: center;
  top: 4%;
  left: 35%;
}

.lose-view-img image {
  width: 260rpx;
  height: 260rpx;
}

.lose-title {
  font-size: 28rpx;
  color: #ccc;
  padding-top: 2%;
}

