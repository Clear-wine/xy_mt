.icon-img {
  width: 22rpx;
  height: 20rpx;
  margin: 0 2%;
}

.icon-img image {
  width: 100%;
  height: 100%;
}

.help-li-img {
  width: 100%;
  height: 300rpx;
  margin: auto;
}

.help-li-img image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.recommend-title view {
  display: inline-block;
}

.rec-ul {
  margin-top: 4%;
  overflow: hidden;
}

.rec-li {
  width: 48%;
  background: #fff;
  /* padding: 2%; */
  border-radius: 20rpx;
  margin: 1%;
  float: left;
}

.rec-li-tit {
  font-size: 28rpx;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.ticket-img {
  position: relative;
}

.ticket-img image {
  width: 82rpx;
  height: 27rpx;
}

.ticket-money {
  font-size: 20rpx;
  color: #fff;
  top: 6rpx;
  left: 35rpx;
  position: absolute;
}

.rec-money {
  font-size: 28rpx;
  color: #ff5543;
  display: inline-block;
}

.rec-nomoney {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  display: inline-block;
  margin-left: 4%;
}

.icon-border {
  width: 45px;
  height: 6px;
  margin: 0 0 0 2%;
}

.icon-left {
  transform: rotate(180deg);
}

.shop-right {
  right: 6%;
  position: absolute;
  top: -8%;
}
