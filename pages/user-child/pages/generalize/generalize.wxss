/* pages/user-child/pages/generalize/generalize.wxss */

.tg-head {
  width: 100%;
  background-color: #fff;
  overflow: hidden;
}

.tg-head-content {
  overflow: hidden;
  font-size: 30rpx;
  padding: 4% 0;
}

.tg-head .head-left {
  width: 50%;
  text-align: center;
  float: left;
  border-right: 1px solid #f4f4f4;
}

.tg-head .head-right {
  width: 45%;
  text-align: center;
  float: left;
}

.head-right image {
  width: 20rpx;
  height: 18rpx;
  margin-left: 4%;
  position: relative;
  top: -1rpx;
}

.tg-list {
  width: 90%;
  margin: 2% auto;
  overflow: hidden;
  font-size: 28rpx;
  padding: 2%;
  color: #999;
  background-color: #fff;
  border-radius: 10rpx;
}

.tg-list .list-head {
  overflow: hidden;
}

.list-head .list-head-l {
  width: 58%;
  float: left;
}

.list-head .list-head-r {
  width: 38%;
  float: right;
}

.list-content {
  margin-top: 4%;
  overflow: hidden;
}

.list-content .list-content-l {
  width: 78%;
  float: left;
}

.list-content .list-content-l text:first {
  margin-right: 12%;
}

.list-content .list-content-r {
  width: 18%;
  float: right;
  font-size: 32rpx;
  color: #000;
  text-align: right;
}
