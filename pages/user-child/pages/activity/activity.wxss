/* pages/user-child/pages/activity/activity.wxss */

.wrap {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 3%;
}

.titleSel {
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.titleSel-show {
  color: #ffa729;
}

.titleUnsel {
  color: #ffa729;
  font-size: 30rpx;
}

.headerLineSel {
  background: #ffa729;
  height: 6rpx;
  width: 100%;
  position: relative;
  margin-top: 20rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 92.6vh;
  overflow: scroll;
}

.swiper-li {
  width: 88%;
  margin: 3% auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 3%;
  box-shadow: 0 0 10px rgba(9, 9, 9, 0.2);
  position: relative;
}

.swiper-top {
  position: relative;
  margin-bottom: 4%;
}

.order-list {
  overflow: hidden;
}

.top-title {
  font-size: 30rpx;
  font-weight: bolder;
}

.top-time {
  display: inline-block;
  font-size: 26rpx;
  color: #ff5429;
  position: absolute;
  right: 0;
  top: 0;
}

.overtime {
  color: #ccc;
}

.swiper-l {
  width: 30%;
  height: 175rpx;
  float: left;
  overflow: hidden;
}

.swiper-l image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.swiper-list {
  width: 68%;
  float: left;
  /* overflow: hidden; */
  text-align: left;
  margin-left: 2%;
  position: relative;
  height: 175rpx;
}

.list-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width: 78%;
  font-size: 26rpx;
}

.list-li {
  font-size: 28rpx;
  color: #999;
  padding-top: 2%;
}

.list-li text {
  margin-right: 4%;
}

.list-money {
  font-size: 32rpx;
  /* color:#ff5429; */
  margin-top: 2%;
}

.li-commission {
  font-size: 22rpx;
  padding-top: 8rpx;
  color: #ff5429;
}

.list-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 29%;
  background: #ffa729;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  height: 42rpx;
  line-height: 42rpx;
}

/* 我的佣金 */

.swiper-bot {
  position: relative;
  margin: 4% 0;
}

.toup {
  font-size: 26rpx;
  color: #999;
  font-weight: 400;
}

.toup .toupMoney {
  color: #ff5429;
}

.wanbi{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}