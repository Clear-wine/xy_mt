page{
  margin: 0;
  padding: 0;
  background-color: #F1F1F1;
}
.top{
  width:100%;
  height:290rpx;
  background:linear-gradient(225deg,rgba(255,134,54,1) 0%,rgba(232,57,57,1) 100%);
}
.top-yi{
  width: 100%;
  text-align: center;
  font-size:50rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  padding-top: 34rpx;
}
.top-er{
  width: 100%;
  text-align: center;
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  padding-top: 4rpx;
}
.top-san{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.top-san>text{
  display: inline-block;
  width:162rpx;
  height:50rpx;
  background:linear-gradient(180deg,rgba(255,198,114,1) 0%,rgba(255,125,38,1) 100%);
  border-radius:26rpx;
  font-size:24rpx;
  font-weight:400;
  line-height:50rpx;
  color:rgba(255,255,255,1);
  text-align: center;
}
.top-si{
  width: 97%;
  height:60rpx;
  margin-top: 22rpx;
  font-size:24rpx;
  font-weight:500;
  line-height:60rpx;
  color:rgba(255,255,255,1);
  text-align: right;
}
.biaoti{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-top: 18rpx;
  padding-left: 24rpx;
}
.list{
  width:700rpx;
  height:130rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin-top: 8rpx;
  margin-left: 24rpx;
}
.list>image{
  width: 130rpx;
  height: 130rpx;
  float: left;
}
.list-center{
  float: left;
  margin-left: 28rpx;
}
.list-name{
  width: 305rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding-top: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-time{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.list-right{
  float: right;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(255,48,0,1);
  margin-right: 36rpx;
  margin-top: 38rpx;
}