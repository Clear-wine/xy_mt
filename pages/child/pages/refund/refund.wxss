/* pages/child/pages/refund/refund.wxss */

.refund {
  width: 100%;
  overflow: hidden;
}

.refund-list {
  width: 90%;
  margin: 2% auto;
  overflow: hidden;
  padding: 2%;
  background: #fff;
}

.refund-list .list-head {
  font-size: 26rpx;
  margin-bottom: 4%;
}

.list-head image {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 7rpx;
}

.list-head .toshop {
  height: 13px;
  width: 11px;
  position: relative;
  top: 2px;
  margin-left: 2%;
}

.list-center {
  width: 100%;
  overflow: hidden;
  font-size: 28rpx;
}

.list-center .list-center-l {
  width: 28%;
  height: 178rpx;
  float: left;
}

.list-center-l image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.list-center-r {
  width: 65%;
  float: left;
  margin-left: 3%;
  position: relative;
}

.list-center-r .title {
  width: 85%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-center-r .ident {
  color: #999;
  margin-top: 4%;
  font-size: 26rpx;
}

.list-center-r .num {
  position: absolute;
  right: 0;
  top: 20%;
  color: #999;
}

.list-bottom {
  width: 100%;
  overflow: hidden;
  margin-top: 4%;
}

.list-bottom .list-bottom-l {
  width: 60%;
  font-size: 28rpx;
  float: left;
}

.list-bottom-l image {
  width: 22px;
  height: 22px;
  position: relative;
  top: 10rpx;
}

.list-bottom-l text {
  margin: 0 4%;
}

.list-bottom-r {
  width: 21%;
  float: right;
  text-align: center;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: 1px solid #f80;
  height: 48rpx;
  line-height: 48rpx;
  color: #f80;
}
