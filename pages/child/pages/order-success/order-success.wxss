/* pages/child/pages/order-success/order-success.wxss */

page {
  background-color: #fff;
}

.wrap {
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.order-sucess {
  margin: auto;
  margin-bottom: 4%;
  margin-top: 5%;
  text-align: center;
}

.suc-img {
  width: 203rpx;
  height: 203rpx;
  margin: auto;
}

.suc-img image {
  width: 100%;
  height: 100%;
}

.suc-title {
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #353b56;
  padding: 10% 0;
}

.suc-price {
  font-family: PingFang-SC-Bold;
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 40rpx;
  letter-spacing: 0rpx;
  color: #353b56;
  padding-top: 5%;
}

.suc-price text {
  font-size: 70rpx;
}

.suc-shopName {
  font-family: PingFang-SC-Medium;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 40rpx;
  letter-spacing: 0rpx;
  color: #999;
}

.btn-wrap {
  width: 80%;
  display: flex;
  justify-content: space-around;
}

.btn-wrap> button {
  border: none;
}

.btn-wrap .btn {
  display: inline-block;
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin: auto;
}

.order-list {
  border-radius: 12rpx;
  border: solid 2rpx #ff9d1b;
  color: #ff9d1b;
}

.order-share {
  background-image: linear-gradient(90deg, #ff9d1b 0%, #ffb62a 100%),
                      linear-gradient(#ff9736, #ff9736);
  background-blend-mode: normal, normal;
  border-radius: 12rpx;
  color: #fff;
}

