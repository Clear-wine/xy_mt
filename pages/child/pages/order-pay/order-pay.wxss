/* pages/child/pages/order-pay/order-pay.wxss *//* pages/child/pages/order-pay/order-pay.wxss */

.pay {
  height: 32vw;
  background-color: #fff;
  padding: 4%;
  overflow: hidden;
  max-height: 196px;
  display: flex;
}

.vip-img {
  position: relative;
  overflow: hidden;
  text-align: justify;
}

.pay-left {
  width: 50%;
  max-width: 240px;
  float: left;
}

.pay-left image {
  width: 100%;
  height: 228rpx;
}

.img-text {
  width: 100%;
  height: 94%;
  position: absolute;
  top: 0;
  padding: 2% 10%;
}

.img-title {
  margin: 2% 0;
  color: #fff;
  height: 20rpx;
}

.img-title image {
  width: 10%;
  position: relative;
  top: 3px;
  min-width: 16px;
  max-width: 16px;
  height: 25rpx;
}

.img-title text {
  margin-left: 2%;
  font-size: 15px;
}

.img-msg {
  position: absolute;
  bottom: 16%;
  color: #fff;
  font-size: 28rpx;
}

.pay-right {
  color: #353b56;
  width: 30%;
  padding: 0 6%;
}

.pay-sum {
  font-size: 40rpx;
  font-weight: 600;
  color: #353b56;
  margin-top: 6%;
}

.pay-sum-li {
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 22%;
}

/*选择支付方式 start*/

.choose-pay {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.choose-li {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  margin-top: 3%;
  position: relative;
  height: 150rpx;
}

.list-img {
  padding: 3.8% 2%;
  width: 10%;
  height: 60rpx;
  text-align: center;
  float: left;
  overflow: hidden;
  margin-top: 2%;
  margin-left: 2%;
}

.list-img image {
  width: 100%;
  height: 100%;
}

.list-text {
  width: 68%;
  float: left;
  overflow: hidden;
  text-align: left;
  margin-left: 2%;
  margin-top: 3.2%;
  padding: 2% 0;
}

.list-title {
  font-weight: 400;
  font-size: 32rpx;
  color: #444;
}

.list-msg {
  width: 70%;
  font-size: 25rpx;
  color: #999;
  margin: 1% 0%;
}

/*选择支付方式 end*/

/*支付按钮 start*/

.pay-b {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: auto;
  font-size: 26rpx;
  overflow: hidden;
  box-shadow: 0 0 10px #f4f4f4;
  z-index: 2;
  height: 125rpx;
}

.pay-btn {
  color: #fff;
  width: 90%;
  margin-top: 2.4%;
	background-image: linear-gradient(90deg, 
		#ff9d1b 0%, 
		#ffb62a 100%);
	border-radius: 4rpx;
}

.radio .wx-radio-input {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 27px;
  top: 62rpx;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  background: #ffb62a;
}
