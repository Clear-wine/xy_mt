/* pages/child/pages/comment/comment.wxss */

.comment {
  margin-bottom: 35%;
}

.comment-list {
  margin: 2% 0;
  /* padding: 2%; */
}

.list-dom {
  /* width: 95%; */
  margin-bottom: 2%;
  padding: 2%;
  overflow: hidden;
  background: #fff;
}

.dom-head {
  border-bottom: 1px solid #f4f4f4;
  font-size: 28rpx;
  overflow: hidden;
  padding-bottom: 2%;
}

.dom-head .dom-img {
  width: 40%;
  float: left;
  position: relative;
  overflow: hidden;
}

.dom-img image {
  width: 39%;
  height: 108rpx;
}

.dom-img text {
  position: absolute;
  top: 49rpx;
  margin-left: 6%;
}

.dom-star {
  width: 60%;
  float: left;
  font-size: 26rpx;
  color: #999;
  margin-top: 6%;
}

.dom-star image {
  width: 40rpx;
  height: 41rpx;
  display: inline-block;
  margin: 0 3%;
}

.dom-star text {
  margin-left: 4%;
  position: relative;
  top: -7rpx;
}

.dom-content {
  font-size: 28rpx;
  margin: 2% 0;
}

