.pre-list {
  width: 88%;
  background-color: #fff;
  padding: 3%;
  margin: 3%;
  border-radius: 10rpx;
  font-size: 30rpx;
  position: relative;
}

.inst-img {
  width: 100%;
  margin: auto;
}

.inst-dom {
  display: inline-block;
  width: 50%;
  font-size: 28rpx;
}
.inst-dom image{
    width: 45rpx;
  height: 36rpx;
  position: relative;
  top: 7rpx;
   left: 2rpx;
}

.attribute {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 3%;
}

.date {
  color: #f24741;
  font-size: 24rpx;
}

.state {
  position: absolute;
  right: 38rpx;
  top: 26rpx;
}

.state image {
  width: 50rpx;
  height: 50rpx;
}

.active-data {
  background-color: #32afff;
}

.radio {
  width: 100%;
}
/**暂无数据**/
.nolist {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  height: 650rpx;
}

.no-img {
  width: 45%;
  height: 255rpx;
}

.no-img image {
  width: 100%;
  height: 100%;
}

.no-title {
  color: #999;
  padding-top: 4%;
}

