
/* **********************商品详情*************************** */

.shopDetails {
  margin-top: 4%;
}

.shopDetails-title {
  font-size: 26rpx;
  color: #999;
  position: relative;
  text-align: center;
}

.shopDetails-title::after, .shopDetails-title::before {
  content: '';
  position: absolute;
  top: 50%;
  background: #999;
  width: 28%;
  height: 1px;
}

.shopDetails-title::after {
  right: 10%;
}

.shopDetails-title::before {
  left: 10%;
}

/****支付*********/

.pay {
  position: fixed;
  bottom: 0;
  background: #fff;
  overflow: hidden;
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
}

.pay-left {
  width: 32%;
  float: left;
  text-align: center;
}

.pay-left .navto{
    margin: 5% 8%;
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
}
.pay-left .navto image{
    width: 40rpx;
  height: 37rpx;
  display: block;
  margin: auto;
}
.pay-right {
  width: 60%;
  font-size: 28rpx;
  color: #fff;
  float: right;
  text-align: right;
}

.pay-right .pay-add {
  display: inline-block;
  line-height: 88rpx;
  background: #f80;
  width: 50%;
  text-align: center;
}

.pay-right .pay-share {
  display: inline-block;
  line-height: 88rpx;
  background: #ff5543;
  width: 50%;
  text-align: center;
}

/**********活动*************/

.activity-logo {
  display: inline-block;
  overflow: hidden;
  width: 57px;
  height: 24px;
  padding: 0;
  margin: 0;
  position: relative;
  top: 8rpx;
}

.activity-logo image {
  width: 100%;
  height: 100%;
}

.activity-logo text {
  position: absolute;
  top: 7rpx;
  left: 15rpx;
  font-size: 26rpx;
  color: #fff;
}

/* 活动支付 */

.activity-pay {
  background: #ff4115;
}

.activity-pay .recommend {
  width: 20%;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 12rpx 0 0;
}

.recommend image {
  width: 100%;
  height: 45rpx;
}

.activity-title {
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  top: 4%;
  left: 46%;
}

/**************弹出层 start**********************/

.mask-layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .7);
  overflow: hidden;
  z-index: 1000;
}

.pop-common {
  width: 100%;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  background: #fff;
  border-radius: 10rpx 10rpx 0 0;
  height: 949rpx;
  /* max-height: 949rpx; */
  /* min-height: 600rpx; */
}

.spinfo {
  position: relative;
  overflow: hidden;
  padding: 4%;
  padding-right: 0;
}

.spinfo .spinfo-img {
  width: 30%;
  height: 220rpx;
  float: left;
}

.spinfo .spinfo-img image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.spinfo .spinfo-content {
  width: 65%;
  position: absolute;
  left: 34%;
  bottom: 10%;
}

.spinfo .spinfo-content .money {
  color: #ff3000;
  font-family: PingFang-SC-Bold;
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  padding: 2% 0;
}
.spinfo .spinfo-content .selected_size{
  font-size: 32rpx;
  padding: 2% 0;
}
.spinfo .spinfo-content .spnoNum {
  color: #999;
  font-size: 26rpx;
  padding: 2% 0;
}
.spinfo .spinfo-content .spnoNum text:first-child {
  margin-right: 6%;
}

.spinfo .spinfo-delete {
  position: absolute;
  right: 3%;
  top: 4%;
  width: 32rpx;
  height: 32rpx;
}

.spinfo .spinfo-delete image {
  width: 100%;
  height: 100%;
}
.spinfo-size {
  height: 265rpx;
}

/* 选择规格 start */

.standard {
  margin: 0 3%;
  width: 94%;
  font-size: 28rpx;
}

.standardTitle {
  font-size: 30rpx;
  margin-top: 20rpx;
}

.standardItem {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.selectItem {
  border: solid 1px #f0f0f0;
  margin: 20rpx;
  padding: 5rpx 23rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
}

.active {
  border: solid 1rpx #ff3000;
  background-color: #ffe7e1;
  color: #ff3000;
}

/* 规格选中时样式 */

.standardSelected {
  color: #fff;
  background: #f26740;
  background-color: #fe6732;
  border: solid 1px #fe6732;
  margin: 20rpx;
  padding: 5rpx 23rpx;
  border-radius: 16rpx;
}

.standardNormal {
  color: #000;
}

.standardDisable {
  color: #eee;
}

/* 选择的数量 */

.selectCount {
  margin: 30rpx 3%;
  width: 94%;
  font-size: 28rpx;
}

.countright {
  float: right;
  display: flex;
  text-align: center;
  align-items: center;
  width: 200rpx;
  height: 62rpx;
  /*给主容器设一个边框*/
  border: 2rpx solid #ccc;
  border-radius: 3px;
}

/* 加号和减号 */

.countright text {
  width: 58rpx;
  line-height: 62rpx;
  text-align: center;
  float: left;
}

/* 数值 */

.countright input {
  width: 80rpx;
  height: 62rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

.countright .normal {
  color: black;
}

.countright .disabled {
  color: #ccc;
}

.countname {
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.showFooter {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 95rpx;
  text-align: center;
  font-size: 32rpx;
}

.showFooter view {
  width: 50%;
  float: left;
  color: #fff;
  height: 95rpx;
  line-height: 95rpx;
}

.showFooter .modal_cart {
  background: #ffb03f;
}

.showFooter .modal_buy {
  background: #f44336;
}

/******************end*******************/
/*全部属性的主盒子*/
.commodity_attr_list { 
 background: #fff; 
 padding: 0 20rpx; 
 font-size: 26rpx; 
 overflow: hidden; 
 width: 100%; 
} 
/*每组属性的主盒子*/
.attr_box { 
 width: 100%; 
 overflow: hidden; 
 border-bottom: 1rpx solid #ececec; 
 display: flex;
 flex-direction: column;
} 
/*属性名*/
.attr_name { 
 width: 20%; 
 float: left; 
 padding: 15rpx 0; 
} 
/*属性值*/
.attr_value_box { 
 width: 80%; 
 float: left; 
 padding: 15rpx 0; 
 overflow: hidden; 
} 
/*每个属性值*/
.attr_value { 
 float: left; 
 padding: 0 30rpx; 
 margin: 10rpx 10rpx; 
 border: 1rpx solid #ececec; 
 border-radius:5px;
 line-height:30px;
} 
/*每个属性选中的当前样式*/
.attr_value_active { 
 border-radius: 10rpx; 
 color: #0089dc; 
 padding: 0 30rpx; 
 border: 1rpx solid #0089dc; 
 /* background: #fff;   */
} 
/*禁用属性*/
.attr_value_disabled { 
 color: #ccc; 
} 